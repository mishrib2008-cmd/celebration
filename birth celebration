<script>
/* Step control */
function nextStep() {
    document.getElementById('step1').classList.add('hidden');
    document.getElementById('step2').classList.remove('hidden');
}

/* Reject button escape */
const reject = document.getElementById('reject');
reject.addEventListener('mouseover', moveReject);
reject.addEventListener('click', moveReject);

function moveReject() {
    reject.style.left = Math.random() * (window.innerWidth - 120) + 'px';
    reject.style.top = Math.random() * (window.innerHeight - 60) + 'px';
}

/* Accept action */
function acceptLove() {
    document.getElementById('step2').classList.add('hidden');
    document.getElementById('step3').classList.remove('hidden');

    document.getElementById('bgMusic').play();
    startFireworks();
    typeWriter();
}

/* Typewriter effect */
const text = `Dhruu,

From the moment you entered my life, everything changed.
Your smile feels like home, your laughter feels like peace,
and your presence feels like destiny.

I may not be perfect, but my love for you is pure,
honest, and endless.

On your birthday, and every day after,
I choose you.
Always.

With all my heart ‚ù§Ô∏è`;

let i = 0;
function typeWriter() {
    if (i < text.length) {
        document.getElementById("letter").innerHTML += text.charAt(i);
        i++;
        setTimeout(typeWriter, 40);
    }
}

/* YouTube player */
function playSong(id) {
    document.getElementById('player').innerHTML =
        `<iframe width="100%" height="200"
        src="https://www.youtube.com/embed/${id}?autoplay=1"
        frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>`;
}

/* Fireworks */
const canvas = document.getElementById('fireworks');
const ctx = canvas.getContext('2d');
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

let fireworks = [];

function startFireworks() {
    setInterval(() => {
        fireworks.push({
            x: Math.random() * canvas.width,
            y: Math.random() * canvas.height / 2,
            r: 0,
            alpha: 1
        });
    }, 300);
}

function animate() {
    ctx.clearRect(0,0,canvas.width,canvas.height);
    fireworks.forEach((f, index) => {
        f.r += 2;
        f.alpha -= 0.02;
        ctx.beginPath();
        ctx.arc(f.x, f.y, f.r, 0, Math.PI * 2);
        ctx.strokeStyle = `rgba(255,255,255,${f.alpha})`;
        ctx.stroke();
        if (f.alpha <= 0) fireworks.splice(index,1);
    });
    requestAnimationFrame(animate);
}
animate();
</script>

